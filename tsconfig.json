{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"strict": true,
		"skipLibCheck": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"lib": ["ESNext", "DOM"],
		"jsx": "react-jsx",
		"jsxImportSource": "hono/jsx",
		"baseUrl": ".",
		"paths": {
			"@db/*": ["app/db/*"],
			"@model/*": ["app/model/*"],
			"@routes/*": ["app/routes/*"]
		},
		"plugins": [
			// Transform paths in output .js files
			{ "transform": "typescript-transform-paths", "resolvePathAliases": true }
		]
	}
}
